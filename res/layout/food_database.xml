<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	<!--      <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mainTitle"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:gravity="center"
	        android:textStyle="bold"
	        /> -->
	    
	    <TableLayout 
	        android:layout_width="fill_parent"
			android:layout_height="fill_parent"
	        >
	
	        <TableRow>
	
	            <TextView
	            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Select food group"
                android:textStyle="normal" 
                android:layout_margin="12dip"
                android:layout_weight="0"
                android:layout_gravity="center_vertical" />
	
	           
	        </TableRow>
	        <TableRow >
	             <Spinner
	                android:id="@+id/selectFoodGroupSpinner"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="left" />
	        </TableRow>
	
	        <TableRow >
	            <TextView
	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Select food"
	        android:gravity="center"
	        android:textStyle="normal"
	        />
	            
	
	        </TableRow>
	        <TableRow >
	            <Spinner
	                android:id="@+id/selectFoodSpinner"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="left" />
	        </TableRow>
	        
	        <TextView
             android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:gravity="left"
        android:textStyle="bold"
             
              />
	        
	        <TableRow >
             <!-- <TextView
                android:id="@+id/AddAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Add amount"
                android:textStyle="normal"
                /> -->
             <EditText
                android:id="@+id/addAmountEditText"
                android:inputType="text|numberDecimal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="normal"
                android:ems="10"
                android:layout_margin="4dip"
                android:layout_weight="1"
                >
            </EditText>
            <TextView
                android:id="@+id/carbGramTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="g"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
         </TableRow>

         
         <TextView
             android:id="@+id/nutritionalInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutritional Info"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:gravity="left"
        android:textStyle="bold"
             
              />
         
         <TableRow >

             <TextView
                 android:id="@+id/carbTextView"
                 android:layout_width="0dip"
                 android:layout_height="wrap_content"
                 android:layout_margin="5dip"
                 android:layout_weight="1"
                 android:gravity="left"
                 android:text="Carb:"
                 android:textStyle="normal" />
             
             <EditText
                 android:id="@+id/carbEditText"
                  android:layout_width="0dip"
                 android:layout_height="wrap_content"
                 android:layout_margin="4dip"
                 android:ems="10"
                 android:inputType="numberDecimal"
                 android:layout_weight="1"
                 android:editable="false" >

            </EditText>
            
             <TextView
                android:id="@+id/carbGramTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="g"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
             
         </TableRow>
         
                  <TableRow >
             <TextView
                android:id="@+id/protiensTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Protiens:"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
             
             <EditText
                 android:id="@+id/protiensEditText"
                 android:layout_width="0dip"
                 android:layout_height="wrap_content"
                 android:layout_margin="4dip"
                 android:ems="10"
                 android:inputType="numberDecimal"
                 android:layout_weight="1"
                 android:editable="false" >

            </EditText>
            
             <TextView
                android:id="@+id/protiensGramTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="g"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
             
         </TableRow>
         
      	
                  
        <TableRow >
             <TextView
                android:id="@+id/calsTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="calories:"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
             
             <EditText
                 android:id="@+id/calsEditText"
                 android:layout_width="0dip"
                 android:layout_height="wrap_content"
                 android:layout_margin="4dip"
                 android:ems="10"
                 android:inputType="numberDecimal"
                 android:layout_weight="1"
                 android:editable="false" >

            </EditText>
            
             <TextView
                android:id="@+id/calsGramTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="g"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
             
         </TableRow>
         
         <TableRow >
             <TextView
                android:id="@+id/fatsTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Fats:"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
             
             <EditText
                 android:id="@+id/fatsEditText"
                 android:layout_width="0dip"
                 android:layout_height="wrap_content"
                 android:layout_margin="4dip"
                 android:ems="10"
                 android:inputType="numberDecimal"
                 android:layout_weight="1" 
                 android:editable="false"
                 >

            </EditText>
            
             <TextView
                android:id="@+id/fatsGramTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="g"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"
                
                />
             
         </TableRow>
         
          
	     
          <TextView
             android:id="@+id/addToMealTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to meal"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:gravity="left"
        android:textStyle="bold"
             
              />
       <TableRow >
            <TextView
                android:id="@+id/selectDateForMealTextView"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Select date:"
                android:textStyle="normal" 
                android:layout_margin="4dip"
                android:layout_weight="1"/>
           
       </TableRow>
       
       <DatePicker
        android:id="@+id/selectMealDatePicker"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content" 
     />
      	<TableRow>
	
	            <TextView
	            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Select Meal"
                android:textStyle="normal" 
                android:layout_margin="12dip"
                android:layout_weight="0"
                android:layout_gravity="center_vertical" />
      	
      	</TableRow>
      	<TableRow >
      	    <Spinner
	                android:id="@+id/selectMealNameSpinner"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="left" />
      	</TableRow>
       
       
       <TableRow >
	            <Button 
	        android:id = "@+id/addButton"
	        android:layout_height="wrap_content"
	        android:text="Add"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_margin="4dip"
	        android:onClick="addMeal"
	        	/>
	     </TableRow>
         
	        
	    </TableLayout>
	    
	</LinearLayout>
    
</ScrollView>

